<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Recipes</title>

  <!-- <link href="css/recipe.css" rel="stylesheet" type="text/css" /> -->
  <link href="/css/recipe.css" rel="stylesheet" type="text/css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
    integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
    integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
    crossorigin="anonymous"></script>
  <!-- <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css"> -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body>

  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <%- include('./partials/navbar'); %>
      </div>
    </div>
  </div>
  <div class="container-fluid mainclass mt-1">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto mainclass">
        <div class="row">
          <div class="col-md-6 col-12 profileimg-text order-md-0 order-1">
            <div class="col">
              <img class="mt-5" src="<%=user_req_recipelist.recipe_profile%> " height="350" width="500"
                border-radius="2rem" />
            </div>

          </div>
          <div class="col-md-6 col-12 profileimg-text order-md-1 order-0">
            <div>
              <h1 class="fw-bold text-center recipe_name">
                <%=user_req_recipelist.recipe_name%>
              </h1>
              
              <div class="recipe-icons">
                <article>
                  <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16" height="1em"
                    width="1em" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M8 15A7 7 0 108 1a7 7 0 000 14zm8-7A8 8 0 110 8a8 8 0 0116 0z"
                      clip-rule="evenodd"></path>
                    <path fill-rule="evenodd"
                      d="M7.5 3a.5.5 0 01.5.5v5.21l3.248 1.856a.5.5 0 01-.496.868l-3.5-2A.5.5 0 017 9V3.5a.5.5 0 01.5-.5z"
                      clip-rule="evenodd"></path>
                  </svg>
                  <h5>prep time</h5>
                  <p>
                    <%=user_req_recipelist. prep_time %>
                  </p>
                </article>
                <article><svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16"
                    height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                      d="M8.515 1.019A7 7 0 008 1V0a8 8 0 01.589.022l-.074.997zm2.004.45a7.003 7.003 0 00-.985-.299l.219-.976c.383.086.76.2 1.126.342l-.36.933zm1.37.71a7.01 7.01 0 00-.439-.27l.493-.87a8.025 8.025 0 01.979.654l-.615.789a6.996 6.996 0 00-.418-.302zm1.834 1.79a6.99 6.99 0 00-.653-.796l.724-.69c.27.285.52.59.747.91l-.818.576zm.744 1.352a7.08 7.08 0 00-.214-.468l.893-.45a7.976 7.976 0 01.45 1.088l-.95.313a7.023 7.023 0 00-.179-.483zm.53 2.507a6.991 6.991 0 00-.1-1.025l.985-.17c.067.386.106.778.116 1.17l-1 .025zm-.131 1.538c.033-.17.06-.339.081-.51l.993.123a7.957 7.957 0 01-.23 1.155l-.964-.267c.046-.165.086-.332.12-.501zm-.952 2.379c.184-.29.346-.594.486-.908l.914.405c-.16.36-.345.706-.555 1.038l-.845-.535zm-.964 1.205c.122-.122.239-.248.35-.378l.758.653a8.073 8.073 0 01-.401.432l-.707-.707z"
                      clip-rule="evenodd"></path>
                    <path fill-rule="evenodd" d="M8 1a7 7 0 104.95 11.95l.707.707A8.001 8.001 0 118 0v1z"
                      clip-rule="evenodd"></path>
                    <path fill-rule="evenodd"
                      d="M7.5 3a.5.5 0 01.5.5v5.21l3.248 1.856a.5.5 0 01-.496.868l-3.5-2A.5.5 0 017 9V3.5a.5.5 0 01.5-.5z"
                      clip-rule="evenodd"></path>
                  </svg>
                  <h5>cook time</h5>
                  <p>
                    <%=user_req_recipelist.total_time%>
                  </p>

                </article>

              </div>

            </div>



          </div>

        </div>
      </div>

    </div>
    <div class="container-fluid mt-5">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="row">
            <!-- left side -->
            <div class="col-md-6 col-12 profileimg-text order-md-0 order-1">
              <h3 class="text-center">KITCHEN GEAR</h3>
              <section class="tolist border border-secondary">
                <div class="container">
                  <div id="kitchengearlist">

                    <ul id="gearullist">
                      <%user_req_recipelist && user_req_recipelist.kitchengear &&
                        user_req_recipelist.kitchengear.forEach(item=>{%>
                        <li>
                          <%=item%>
                        </li>
                        <% }); %>
                    </ul>
                  </div>
                </div>
              </section>
            </div>
            <!-- right side -->

            <div class="col-md-6 col-12 profileimg-text order-md-1 order-0">
              <h3 class="text-center">INGREDIENTS</h3>
              <section class="tolist border border-secondary">
                <div class="container">
                  <div id="ingredientslist">

                    <ul class="ingredientsitamlist">
                      <%user_req_recipelist && user_req_recipelist.ingredients &&
                        user_req_recipelist.ingredients.forEach(item=>{%>
                        <li>
                          <%=item%>
                        </li>
                        <% }); %>
                    </ul>

                  </div>
                </div>
              </section>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid mt-5">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <section class="tolist border border-secondary">
            <div class="container">
              <h4 class="text-center">INSTRUCTIONS</h4>
              <div id="instructionlist">
                <ul>
                  <%user_req_recipelist && user_req_recipelist.instruction &&
                    user_req_recipelist.instruction.forEach(item=>
                    {%>
                    <li>
                      <%=item%>
                    </li>
                    <% }); %>
                </ul>

              </div>
          </section><br>
          
          <br><br>

        </div>
      </div>
    </div>
    

  </div>
  <%- include('./partials/footer'); %>
</body>
<script>






</script>

</html>